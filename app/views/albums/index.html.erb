<p id="notice"><%= notice %></p>

<h1>Albums</h1>

<div class="row albums">
    <% @albums.each do |album| %>
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="<%= album.cover %>" style="height:200px;">
            <div class="caption">
                <h3>Title: <%= album.title %></h3>
                <h3>Artist: <%= album.artist.name %></h3>
                <h3>Genre: <%= album.genre.name %></h3>
                <%= link_to "Show", album %> | <%= link_to 'Edit', edit_album_path(album) %> | <%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
        </div>
    </div>
    <% end %>
</div>

<%= link_to 'New Album', new_album_path, class: "btn btn-default" %>

<%= will_paginate @albums, renderer: BootstrapPagination::Rails %>